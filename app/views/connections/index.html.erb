<h1>Listing connections</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Servername</th>
    <th>Ipaddress</th>
    <th>Description</th>
    <th>Privatekeypw</th>
    <th>Privatekey</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @connections.each do |connection| %>
  <tr>
    <td><%= connection.name %></td>
    <td><%= connection.servername %></td>
    <td><%= connection.ipaddress %></td>
    <td><%= connection.description %></td>
    <td><%= connection.privatekeypw %></td>
    <td><%= connection.privatekey %></td>
    <td><%= link_to 'Show', connection %></td>
    <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
    <td><%= link_to 'Destroy', connection, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

